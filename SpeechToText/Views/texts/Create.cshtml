@model SpeechToText.Models.text

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "texts", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>text</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="app">
            @*<h3>Add New Note</h3>*@
            <div class="input-single">
                @Html.LabelFor(model => model.VText, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextArea("VText", new
                    {
                        @class = "app",
                        @id = "Discussion",
                        @rows = "4",
                        @cols = "130"
                    })
                    @Html.ValidationMessageFor(model => model.VText)
                    <input type="button" value="Start" id="start-record-btn" />
                    <input type="button" value="Pause" id="pause-record-btn" />
                    <button id="save-note-btn" title="Save Note">Save Note</button>
                    <p id="recording-instructions">Press the <strong>Start Recognition</strong> button and allow access.</p>
                </div>

                @*<button id="start-record-btn" title="Start Recording">Start Recognition</button>*@
                @*<button id="pause-record-btn" title="Pause Recording">Pause Recognition</button>*@
                @*<button id="save-note-btn" title="Save Note">Save Note</button>
                    <p id="recording-instructions">Press the <strong>Start Recognition</strong> button and allow access.</p>*@

                <h3>My Notes</h3>
                <ul id="notes">
                    <li>
                        <p class="no-notes">You don't have any notes.</p>
                    </li>
                </ul>

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section scripts{
    
    <script src="/voice/script.js"></script>
}
